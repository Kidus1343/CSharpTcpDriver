<Window x:Class="TcpMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Sensor Monitor" Height="250" Width="400">
    <Grid>
        <TextBlock Text="Temperature:" FontSize="16" Margin="10"/>
        <TextBlock Name="TempText" FontSize="16" Margin="120,10,0,0"/>
        <Button Content="Refresh" Click="RefreshData" Width="100" Height="30" HorizontalAlignment="Right" Margin="0,10,10,0"/>
    </Grid>
</Window>
